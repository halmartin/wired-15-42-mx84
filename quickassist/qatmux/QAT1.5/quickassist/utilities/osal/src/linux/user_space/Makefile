####################Common variables and definitions########################
# Ensure The ICP_ENV_DIR environmental var is defined.
ifndef ICP_ENV_DIR
$(error ICP_ENV_DIR is undefined. Please set the path to your environment makefile \
        "-> setenv ICP_ENV_DIR <path>")
endif

#Add your project environment Makefile
include $(ICP_ENV_DIR)/environment.mk

#include the makefile with all the default and common Make variable definitions
include $(ICP_BUILDSYSTEM_PATH)/build_files/common.mk
ifdef BANKE_WORKAROUND
INCLUDES += -I$(OSAL_DIR)/src/linux/user_space/osalzlib/include
endif 
ICP_OS_LEVEL?=user_space
OS_LEVEL?=linux

ifdef ICP_LOG_SYSLOG
EXTRA_CFLAGS+= -DICP_LOG_SYSLOG
endif

ifeq ($(ARCH), i386)
EXTRA_CFLAGS+= -m32
endif
ifeq ($(ARCH), i686)
EXTRA_CFLAGS+= -m32
endif

ifndef CROSS_COMPILE
MACHINE?=$(shell uname -m)
else
ifndef MACHINE
$(error MACHINE not defined)
endif
endif

EXTRA_CFLAGS+=-DOSAL_ENSURE_ON

ifeq ($(MACHINE), x86_64)
EXTRA_CFLAGS+= -march=x86-64
else
EXTRA_CFLAGS+= -march=$(MACHINE)
endif

ifdef ICP_NUM_PAGES_PER_ALLOC
EXTRA_CFLAGS+=-DICP_NUM_PAGES_PER_ALLOC
endif

ifdef ICP_SRIOV
EXTRA_CFLAGS+=-DICP_SRIOV
ifdef ICP_WITHOUT_IOMMU
EXTRA_CFLAGS+=-DICP_WITHOUT_IOMMU
endif
else
EXTRA_CFLAGS+=-DICP_WITHOUT_IOMMU
endif

ifdef BANKE_WORKAROUND
EXTRA_CFLAGS+=-DBANKE_WORKAROUND
endif

#Add the name for the executable, Library or Module output definitions
OUTPUT_NAME=libosal

# List of Source Files:
SOURCES+= OsalSemaphore.c \
          OsalThread.c \
          OsalMutex.c \
          OsalSpinLock.c \
          OsalAtomic.c \
          OsalServices.c \
          OsalUsrKrnProxy.c \
          OsalCryptoInterface.c \
         
ifdef BANKE_WORKAROUND   
SOURCES+= OsalBankE.c \
          OsalZlib.c \
          osalzlib/inflate.c \
          osalzlib/inftrees.c \
          osalzlib/adler32.c \
          osalzlib/inffast.c \
          osalzlib/zutil.c \
          osalzlib/crc32.c
endif

#include your $(ICP_OS)_$(ICP_OS_LEVEL).mk file
include $(ICP_ENV_DIR)/$(ICP_OS)_$(ICP_OS_LEVEL).mk

# On the line directly below list the outputs you wish to build for
install: lib_static lib_shared

###################Include rules makefiles########################
include $(ICP_BUILDSYSTEM_PATH)/build_files/rules.mk
###################End of Rules inclusion#########################
